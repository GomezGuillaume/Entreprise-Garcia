{% extends "Base/base.html.twig" %}

{% block MetaDescription %}<meta name="description" content="Formulaire de contact pour Ã©tablir un devis avec l'artisan.">{% endblock MetaDescription %}

{% block title %}<title>Contact</title>{% endblock title %}

{% block classFondNav %}fond-contact{% endblock classFondNav %}

{% block contentNav %}

    <h2 class="row justify-content-center pt-5 contact">Nous contacter</h2>

        {% for message in app.flashes ('message') %}
            <div class="alert alert-success text-align-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}

    <div id="contactForm" class="pt-5 row">
        {{ form_start(contactForm) }}
            <div class="contact">{{ form_label(contactForm.lastname) }}</div>
            <div>{{ form_errors(contactForm.lastname) }}</div>
            <div>{{ form_widget(contactForm.lastname, {'attr' : {'class' : 'widget_contact'}}) }}</div>

            <div class="pt-4 contact">{{ form_label(contactForm.firstname) }}</div>
            <div>{{ form_errors(contactForm.firstname) }}</div>
            <div>{{ form_widget(contactForm.firstname, {'attr' : {'class' : 'widget_contact'}}) }}</div>

            <div class="pt-4 contact">{{ form_label(contactForm.email) }}</div>
            <div>{{ form_errors(contactForm.email) }}</div>
            <div>{{ form_widget(contactForm.email, {'attr' : {'class' : 'widget_contact'}}) }}</div>

            <div class="pt-4 contact">{{ form_label(contactForm.phone) }}</div>
            <div>{{ form_errors(contactForm.phone) }}</div>
            <div>{{ form_widget(contactForm.phone, {'attr' : {'class' : 'widget_contact'}}) }}</div>

            <div class="pt-4 contact">{{ form_label(contactForm.adress) }}</div>
            <div>{{ form_errors(contactForm.adress) }}</div>
            <div>{{ form_widget(contactForm.adress, {'attr' : {'class' : 'widget_contact'}}) }}</div>

            <div class="pt-4 contact">{{ form_label(contactForm.content) }}</div>
            <div>{{ form_widget(contactForm.content, {'attr' : {'class' : 'widget_contact'}}) }}</div>

            <div class="w-sub">{{ form_widget(contactForm.submit, {'attr' : {'class' : 'widget_submit'}}) }}</div>
        {{ form_end(contactForm) }}
    </div>

{% endblock contentNav %}